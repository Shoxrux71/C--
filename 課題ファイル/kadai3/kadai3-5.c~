#include <stdio.h>
int main(){
  int 単価 = 1000;
  int そうりょう = 600;
  int 注文数;
  float だいきん;

  printf("注文数をにゅうりょくして下さい: ");
  scanf("%d", &注文数);

  //だいきんけいさん
  if(注文数 < 10 ) {
    だいきん＝単価 * 注文数 * 1.1 + そうりょう;
  }
  else if(注文 数＝50){
    だいき ん＝ 単価 * 注文数 * 1.1;
  }else{
    だいきん ＝（単価*0.9)*注文数*1.1;
  }
  printf("だいきんは %.0f円です。\n");
  return 0;
}
  
      
      
    
	 
